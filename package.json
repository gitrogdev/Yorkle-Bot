{
	"name": "yorkle",
	"version": "2.1.8",
	"type": "module",
	"description": "**Yorkle** is a Discord bot that hosts a daily music puzzle game functioning similar to games such as *Wordle*. Built for a small community of Radiohead fans, the bot presents all players with the same randomly selected audio clip from a Radiohead song each day. Players must identify the song in as few guesses as possible.",
	"main": "./src/main.ts",
	"scripts": {
		"build": "tsc",
		"start": "node --env-file=.env dist/main.js",
		"deploy-commands": "node --env-file=.env dist/scripts/deploy-commands.js",
		"shuffle": "node dist/scripts/shuffle-songs.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gitrogdev/Yorkle-Bot.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/gitrogdev/Yorkle-Bot/issues"
	},
	"homepage": "https://github.com/gitrogdev/Yorkle-Bot#readme",
	"devDependencies": {
		"@types/node": "^25.0.10",
		"@typescript-eslint/eslint-plugin": "^8.53.1",
		"@typescript-eslint/parser": "^8.53.1",
		"eslint": "^9.39.2",
		"prettier": "^3.8.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1"
	},
	"dependencies": {
		"discord.js": "^14.25.1",
		"music-metadata": "^11.11.0"
	}
}
